.row
    .col-sm-6
        h1 Serwis do zlecania nowych jobow
    .col-sm-6
        form.form(name='form', ng-submit='addJob(form)')
            .form-group
                .row
                    label Wprowadz zakres postaci: a,b (np: 4,14)
                .row
                    textarea(name='data', ng-model='data')
            .row
                button.btn.btn-lg.btn-primary(type='submit') Add job
                .div
                p.label.label-danger(ng-show='errors')
                    | {{errors.message}}
                span.clearfix
